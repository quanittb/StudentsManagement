<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_description">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_description_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="numberpicker">
        <item name="fontFamily">@font/mukta_semi_bold</item>
    </style>

    <style name="style_onboarding_title">
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mukta_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">-4sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_onboarding_description">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/mukta_regular</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#617D79</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

    </style>
    <style name="FullscreenReminderTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>