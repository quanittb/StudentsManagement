<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_language"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_8sdp">

        <ImageView
            android:id="@+id/imgIconLanguage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameLanguage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/black"
            android:paddingVertical="@dimen/_6sdp"
            android:textSize="@dimen/_14ssp"
            android:text="langugaeeeeeeeeeeeee"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintBottom_toBottomOf="@+id/imgIconLanguage"
            app:layout_constraintStart_toEndOf="@+id/imgIconLanguage"
            app:layout_constraintEnd_toStartOf="@id/imgChooseLanguage"
            app:layout_constraintTop_toTopOf="@+id/imgIconLanguage" />

        <ImageView
            android:id="@+id/imgChooseLanguage"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_select_language"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
