<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ln_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_color_PH"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingHorizontal="@dimen/_4sdp"
        android:elevation="@dimen/_4sdp">
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/_4sdp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/avartar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/_16ssp"
            android:text="GVCN Nguyễn Thị An"
            android:lines="1"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:layout_gravity="center"
            android:padding="@dimen/_4sdp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/ln_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ln_header"
        app:layout_constraintBottom_toTopOf="@id/ln_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_4sdp">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/inter_regular"
                android:text="HÔM NAY"
                android:textColor="#80000000"
                android:textSize="@dimen/_12ssp"
                android:layout_marginVertical="@dimen/_4sdp"/>
            <com.google.android.material.circularreveal.CircularRevealGridLayout
                android:id="@+id/ln_chat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp">
                <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="Xin chào chị."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="#BFE5E5E5"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/avatar_gv"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_4sdp"

                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="Tôi là GVCN của lớp 6A."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="#BFE5E5E5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_10ssp"
                    android:text="10:45"
                    android:textColor="#80000000"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:gravity="center_vertical"/>

            </com.google.android.material.circularreveal.CircularRevealGridLayout>
            <com.google.android.material.circularreveal.CircularRevealGridLayout
                android:id="@+id/ln_chat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln_chat1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp">
                <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:text="Chào cô giáo."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="@color/primary_color_PH"
                    android:layout_gravity="right"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/avartar"
                    android:layout_row="2"
                    android:layout_column="3"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_4sdp"

                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:text="Tôi là GVCN của lớp 6A."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="@color/primary_color_PH"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_10ssp"
                    android:text="10:48"
                    android:textColor="#80000000"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:gravity="center_vertical|right"/>

            </com.google.android.material.circularreveal.CircularRevealGridLayout>
            <com.google.android.material.circularreveal.CircularRevealGridLayout
                android:id="@+id/ln_chat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln_chat2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp">
                <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="Xin chào chị."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="#BFE5E5E5"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/avatar_gv"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_4sdp"

                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="Tôi là GVCN của lớp 6A."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="#BFE5E5E5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_10ssp"
                    android:text="10:50"
                    android:textColor="#80000000"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:gravity="center_vertical"/>

            </com.google.android.material.circularreveal.CircularRevealGridLayout>
            <com.google.android.material.circularreveal.CircularRevealGridLayout
                android:id="@+id/ln_chat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ln_chat3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:elevation="@dimen/_4sdp">
                <TextView
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:text="Chào cô giáo."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="@color/primary_color_PH"
                    android:layout_gravity="right"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/avartar"
                    android:layout_row="3"
                    android:layout_column="3"/>
                <TextView
                    android:layout_column="2"
                    android:layout_row="2"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_4sdp"

                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/white"
                    android:text="Tôi là GVCN của lớp 6A."
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="@color/primary_color_PH"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_columnSpan="3"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/_10ssp"
                    android:text="✔ Đã xem"
                    android:textColor="#80000000"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_kk"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_gravity="right"/>

            </com.google.android.material.circularreveal.CircularRevealGridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln_chat4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ln_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_14sdp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img"
            android:padding="@dimen/_4sdp"/>
        <ImageView
            android:id="@+id/file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file"
            android:padding="@dimen/_4sdp"/>
        <EditText
            android:id="@+id/et_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_20_white"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:hint="Nhập tin nhắn"
            android:fontFamily="@font/inter_regular"
            android:paddingHorizontal="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_icon_chat"/>
        <ImageView
            android:id="@+id/ic_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sent"
            android:padding="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>