<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="@dimen/_4sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_arrow_back_color"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/primary_color_PH"
        android:text="Xin nghỉ phép"
        android:gravity="center"
        android:paddingVertical="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/label_lydo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:text="Lý do:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/txt_lydo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintLeft_toRightOf="@id/label_lydo"
        app:layout_constraintTop_toTopOf="@id/label_lydo"
        app:layout_constraintBottom_toBottomOf="@id/label_lydo"
        android:text="Chọn lý do nghỉ"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:drawableEnd="@drawable/ic_arrow_down_white"
        android:drawablePadding="@dimen/_16sdp"
        android:background="@drawable/bg_corner_10_white"
        android:backgroundTint="#0096C7"/>
    <TextView
        android:id="@+id/label_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintLeft_toLeftOf="@id/label_lydo"
        app:layout_constraintTop_toBottomOf="@id/label_lydo"
        android:text="Thời gian: Từ ngày"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_16sdp"/>
    <ImageView
        android:id="@+id/img_range_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/label_time"
        android:src="@drawable/ic_range_date"
        app:layout_constraintTop_toTopOf="@id/label_time"
        app:layout_constraintBottom_toBottomOf="@id/label_time"
        android:paddingHorizontal="@dimen/_4sdp"/>
    <TextView
        android:id="@+id/label_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="@id/label_time"
        app:layout_constraintBottom_toBottomOf="@id/label_time"
        app:layout_constraintLeft_toRightOf="@id/img_range_date"
        android:text="đến ngày"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />
    <TextView
        android:id="@+id/label_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintLeft_toLeftOf="@id/label_time"
        app:layout_constraintTop_toBottomOf="@id/label_time"
        android:text="Ảnh lý do đính kèm(nếu có) "
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_16sdp"/>
    <ImageView
        android:id="@+id/img_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/label_image"
        android:src="@drawable/ic_cam"
        app:layout_constraintTop_toTopOf="@id/label_image"
        app:layout_constraintBottom_toBottomOf="@id/label_image"
        android:paddingHorizontal="@dimen/_4sdp"/>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@drawable/bg_corner_20_white"
        android:backgroundTint="@color/primary_color_PH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cam"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:text="Gửi xác nhận"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>