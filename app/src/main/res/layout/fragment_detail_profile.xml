<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ln_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/_10sdp">
        <ImageView
            android:id="@+id/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_arrow_back"
            android:elevation="@dimen/_1sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:id="@+id/line"
            android:background="@drawable/bg_detail_profile_header"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/_20sdp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_ava"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/avartar"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cam_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/_60sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ln_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/bg_corner_20_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:elevation="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_name"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Họ và tên"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="Lại Hồng Phúc"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:elevation="@dimen/_9sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_birth"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Ngày sinh"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="04/09/2013"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Giới tính"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="Nam"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_7sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_gender"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Địa chỉ"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="Cầu Giấy, Hà Nội"
                        android:lines="1"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone_profile"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Số điện thoại"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="0365901233"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_email"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Email"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="hoangleminh@gmail.com"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_4sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_class_profile"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Lớp học"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="6A"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_16sdp"
                    android:background="@drawable/bg_corner_20_white_bottom"
                    android:elevation="@dimen/_3sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_year"
                        android:padding="@dimen/_4sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/primary_color_PH"
                        android:text="Năm học"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:text="2023-2024"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:elevation="@dimen/_2sdp"
                android:background="@drawable/bg_corner_20_white_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_corner_10_white"
                    android:backgroundTint="#B4B3B3"
                    android:text="Chỉnh sửa"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_10sdp"/>
                <TextView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Xác nhận"
                    android:background="@drawable/bg_corner_10_primary"
                    android:paddingVertical="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>