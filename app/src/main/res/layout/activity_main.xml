<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back_ground_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ln_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/bg_corner_20_primary_ph"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_4sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/avartar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lại Hồng Phúc"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintLeft_toRightOf="@id/avatar"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp 6A"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintLeft_toLeftOf="@id/tv_name"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/_14ssp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ic_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_noti"/>
        <ImageView
            android:id="@+id/ic_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ic_noti"
            android:src="@drawable/ic_chat"
            android:layout_marginEnd="@dimen/_14sdp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/layout_add_Fragment_Main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ln_bot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln_header"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ln_bot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        android:background="@drawable/bg_corner_20_primary"
        android:paddingTop="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent">
        <View
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:background="@drawable/bg_corner_10_white"/>
        <View
            android:visibility="invisible"
            android:id="@+id/line_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_10_white"/>
        <View
            android:visibility="invisible"
            android:id="@+id/line_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_10_white"/>
        <View
            android:visibility="invisible"
            android:id="@+id/line_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_10_white"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_nav"
        app:labelVisibilityMode="labeled"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/bottom_color_nav"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:itemHorizontalTranslationEnabled="true"
        />
</androidx.constraintlayout.widget.ConstraintLayout>